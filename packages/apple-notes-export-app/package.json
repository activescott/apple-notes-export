{
  "name": "apple-notes-export",
  "version": "1.0.0",
  "private": true,
  "license": "MPL-2.0",
  "description": "A script for programmatically exporting your data from the Apple Notes application.",
  "author": "Scott Willeke <scott@willeke.com>",
  "files": [
    "/dist"
  ],
  "bin": {
    "apple-notes-export": "dist/cli.js"
  },
  "scripts": {
    "build:app": "rm -f ./dist/*.* && webpack-cli --config webpack.config.app.js && echo ''",
    "build:cli": "tsc --build tsconfig.cli.json",
    "build": "npm run -s build:app && npm run -s build:cli",
    "start": "npm run build && osascript -l JavaScript dist/bundle.js",
    "eslint": "./node_modules/.bin/eslint . --ext ts,tsx,js,jsx",
    "lint": "./node_modules/.bin/prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && npm run eslint",
    "lint-fix": "./node_modules/.bin/prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && npm run eslint --fix"
  },
  "dependencies": {
    "@activescott/apple-jsx": "file:../apple-jsx",
    "@activescott/apple-jsx-apps": "file:../apple-jsx-apps",
    "@activescott/apple-jsx-env": "file:../apple-jsx-env",
    "@babel/polyfill": "^7.8.3",
    "agentmarkdown": "^4.2.2",
    "core-js": "3",
    "mime-types": "^2.1.26",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@activescott/eslint-config": "^1.1.2",
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.8.3",
    "@types/mime-types": "^2.1.0",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "prettier": "^1.19.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  }
}
